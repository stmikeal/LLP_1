CC=gcc
CFLAGS=--std=c17 -Wall -pedantic -Isrc/ -ggdb -Wextra -Werror -DDEBUG -g3

BUILDDIR=build
SRCDIR=src
TARGETDIR=.

SOURCES=$(wildcard src/*.c) $(wildcard src/*/*.c) $(wildcard src/*/*/*.c) $(wildcard src/*/*/*/*.c)
EXECUTABLE=main

.PHONY: build

build: $(EXECUTABLE)

$(EXECUTABLE): $(SOURCES)
	$(CC) $(SOURCES) -o $@
clean:
	del -rf $(BUILDDIR) $(EXECUTABLE)